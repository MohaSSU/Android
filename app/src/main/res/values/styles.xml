<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BlueMaterialButtonStyle">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="GrayMaterialButtonStyle">
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="lightGrayMaterialButtonStyle">
        <item name="android:backgroundTint">@color/lightGray</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
    </style>
    <style name="RedMaterialButtonStyle">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="CustomSpinner" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/black</item> <!-- 텍스트 색상 설정 -->
        <item name="android:textSize">14sp</item> <!-- 텍스트 크기 설정 -->
    </style>
    <!-- Custom DatePicker Text Style -->
    <style name="WhiteBackgroundBlackTextDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
    </style>
    <style name="CustomDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- 스플래시 테마 정의 -->
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <!-- 스플래시 배경색 -->
        <item name="windowSplashScreenBackground">@color/white</item>
        <!-- 스플래시 아이콘 -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <!-- 애니메이션 지속 시간 -->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <!-- 앱 메인 테마 -->
        <item name="postSplashScreenTheme">@style/Theme.MohaSSU</item>
    </style>
</resources>