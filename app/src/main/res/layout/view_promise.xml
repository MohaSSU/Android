<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/background_promise_card"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <!-- 지도 이미지 -->
    <ImageView
        android:id="@+id/img_map"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_sample_map" />

    <!-- 프로필 이미지 -->
    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-20dp"
        android:src="@drawable/pic_basic_profile"
        android:padding="4dp" />

    <!-- 약속 제목 -->
    <TextView
        android:id="@+id/tv_promise_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="원석평 외 2명과의 약속"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <!-- 약속 장소 -->
    <TextView
        android:id="@+id/tv_promise_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="정보과학관에서"
        android:textSize="12sp"
        android:textColor="@android:color/black" />

    <!-- 약속 시간 -->
    <TextView
        android:id="@+id/tv_promise_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="오늘 12:00에 만나요"
        android:textSize="12sp"
        android:textColor="@android:color/holo_blue_light" />

</LinearLayout>
