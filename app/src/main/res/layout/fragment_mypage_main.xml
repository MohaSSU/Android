<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 상단 텍스트 -->
    <FrameLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back"
            android:contentDescription="뒤로가기 버튼"
            android:background="?selectableItemBackground"
            android:foregroundTint="@color/black" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="마이페이지"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="8dp"
            android:textColor="@color/black" />
    </FrameLayout>

    <View
        android:id="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        android:layout_marginBottom="12dp" />

    <!-- 프로필 카드 -->

    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="준혁핑님 반갑습니다"
        android:textColor="#4682B4"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/topBar"
        app:layout_constraintTop_toBottomOf="@id/topBar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profileCard"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/greetingText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="20dp">

            <TableRow>
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/img_my_profile"
                android:layout_gravity="top" />

            <TextView
                android:id="@+id/usernickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp" />

                <ImageButton
                    android:id="@+id/btnProfileEdit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="140dp"
                    android:background="?selectableItemBackground"
                    android:scaleType="fitXY"
                    android:padding="5dp"
                    android:src="@drawable/ic_profile_edit"
                    />

            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="3dp" />

            <TextView
                android:id="@+id/userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abc123@gmail.com"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp" />
        </TableRow>
        <TableRow>
                <TextView
                    android:id="@+id/textRealName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="3dp" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp" />
        </TableRow>
            <TableRow>
            <TextView
                    android:id="@+id/textBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생년월일"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                android:layout_marginTop="10dp"
                android:layout_marginStart="3dp" />

            <TextView
                android:id="@+id/userBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2002.01.01"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp" />
            </TableRow>

        </TableLayout>
    </androidx.cardview.widget.CardView>

    <!-- 버튼: 나의 시간표 -->
    <ImageButton
        android:id="@+id/btnSchedule"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:src="@drawable/img_mytime_withtext"
        android:scaleType="centerInside"
        android:background="@drawable/button_style"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/profileCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- 버튼: 알림 설정 -->
    <ImageButton
        android:id="@+id/btnNotification"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:src="@drawable/img_alarm_setting_withtext"
        android:scaleType="centerInside"
        android:background="@drawable/button_style"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnSchedule"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- 로그아웃 텍스트 -->
    <TextView
        android:id="@+id/logoutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>