<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 지도 뷰 -->
    <!--
    <com.naver.maps.map.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    >
    <! 임시 지도 스크린 샷 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pic_sample_map"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/background_upper_rounded_corner"
        android:layout_gravity="bottom">

        <!-- 약속 제목 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_promise_title"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="약속 만들기"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="?selectableItemBackground"
                android:contentDescription="뒤로가기 버튼"
                android:src="@drawable/ic_clear" />
        </LinearLayout>

        <!-- 약속 장소 및 설명 -->
        <TextView
            android:id="@+id/tv_promise_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약속 장소 및 설명"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="약속 장소를 설명해주세요!"
            android:background="@drawable/background_edit_text"
            android:textSize="12sp"
            android:padding="2dp"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD" />

        <!-- 약속 종류 및 시간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- 약속 종류 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="약속 종류"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/tv_promise_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="밥약속"
                    android:background="@drawable/background_edit_text"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 약속 시간 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="약속 시간"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/tv_promise_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="yy/mm/dd"
                        android:padding="2dp"
                        android:background="@drawable/background_edit_text"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                    <EditText
                        android:id="@+id/tv_promise_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="09:00 ~ 10:00"
                        android:padding="2dp"
                        android:background="@drawable/background_edit_text"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_attendee_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="함께할 사람들"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- 프로필 1 -->
            <include layout="@layout/view_profile_in_promise"/>

            <!-- 추가 버튼 -->
            <include layout="@layout/view_add_profile_in_promise"/>

        </LinearLayout>

        <!-- 약속 수정 및 삭제 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_modify_promise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="약속 저장하기"
                android:textStyle="bold"
                style="@style/BlueMaterialButtonStyle" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
